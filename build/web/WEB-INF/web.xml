<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>usuarioServlet</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.usuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productoServlet</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.productoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clienteServlet</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.clienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>empleadoServlet</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.empleadoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscadorPredictivo</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.buscadorPredictivo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>proveedorServlet</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.proveedorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscadorPredictivoProveedor</servlet-name>
        <servlet-class>cl.easyfarmaventas.controler.buscadorPredictivoProveedor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usuarioServlet</servlet-name>
        <url-pattern>/usuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productoServlet</servlet-name>
        <url-pattern>/productoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>clienteServlet</servlet-name>
        <url-pattern>/clienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>empleadoServlet</servlet-name>
        <url-pattern>/empleadoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscadorPredictivo</servlet-name>
        <url-pattern>/buscadorPredictivo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>proveedorServlet</servlet-name>
        <url-pattern>/proveedorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscadorPredictivoProveedor</servlet-name>
        <url-pattern>/buscadorPredictivoProveedor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
